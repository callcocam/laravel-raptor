# Laravel Raptor - Multi-Tenant Configuration

# Domínio principal da aplicação (sem http/https)
RAPTOR_MAIN_DOMAIN=localhost

# Subdomínio para administração central (landlord)
# Acesso: landlord.localhost
RAPTOR_LANDLORD_SUBDOMAIN=landlord

# Habilita suporte a domínios customizados para tenants
# Se true, tenants podem ter seus próprios domínios
RAPTOR_ENABLE_CUSTOM_DOMAINS=false

# Estratégia de banco de dados multi-tenant
# shared: Todos os tenants compartilham o mesmo banco
# separate: Cada tenant tem seu próprio banco de dados
RAPTOR_DB_STRATEGY=shared

# Prefixo para bancos de dados separados (apenas se RAPTOR_DB_STRATEGY=separate)
RAPTOR_DB_PREFIX=tenant_

# Disco de armazenamento para arquivos dos tenants
RAPTOR_STORAGE_DISK=public
